{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "**/node_modules/*", "public"],
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    "typings.d.ts",
    "src/config/.umirc.ts"
  ]
}
